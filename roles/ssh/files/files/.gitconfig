[user]
    name = User Name
    email = user@domain.com

[core]
    editor = mcedit
    excludesfile = ~/.gitignore
#    autocrlf = input
#    safecrlf = true

[push]
    default = simple

[color]
    ui = true

[alias]
    co = checkout
    ci = commit
    di = diff
    st = status
    dt = difftool
    mt = mergetool

    df = diff HEAD
    ss = status -s
    lo = log --stat --graph --date-order
    hi = log --pretty=\"format:%h %ai | %s%d [%an]\" --graph --date-order
    hist = log --pretty=\"format:%h %ai | %s%d [%an]\"
    last = log -1 HEAD
    unstage = reset HEAD --
    type = cat-file -t
    dump = cat-file -p

[log]
    decorate = true

[difftool]
#    prompt = false

[mergetool]
    keepBackup = false
#    prompt = false

[diff]
    tool = kdiff3

[merge]
    tool = kdiff3

