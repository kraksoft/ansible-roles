<VirtualHost *:80>
    ServerName                          domain.com
    ServerAlias                         *.domain.com
    ServerAdmin                         webmaster@domain.com
    DocumentRoot                        "/var/www/public_html"
    <Directory                          "/var/www/public_html">
        Options                         Indexes FollowSymLinks
        AllowOverride                   All
        Order                           Allow,Deny
        Allow from                      All
    </Directory>
</VirtualHost>
